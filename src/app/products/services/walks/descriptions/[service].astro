---
import type { GetStaticPaths } from "astro";
import Description from "@layouts/Description.astro";
import { productsWalks } from "@pages/products/service/walks/productsWalks";
import { Image } from "astro:assets";

export const getStaticPaths = (() => {
  const paths = productsWalks.map((product) => {
    return {
      params: { service: product },
    };
  });
  return paths;
}) satisfies GetStaticPaths;

const { service } = Astro.params;
---

<Description title={service}>
  <Image
    src={`/service/${service}.png`}
    alt={`Image of ${service}`}
    width={640}
    height={426}
    class="Description__image"
  />
  <style>
    .Description__image {
      height: 50dvh;
      width: auto;
      object-fit: contain;
    }
  </style>
</Description>
